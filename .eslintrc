# http://eslint.org/docs/user-guide/configuring

---
root: true
parser: babel-eslint
extends: airbnb-base
env:
  browser: true

parserOptions:
  sourceType: module

plugins:
  - import

rules:
  no-debugger: 2
  no-param-reassign: off
  no-tabs: off

  import/extensions:
    - error
    - always
    - js: never

  import/no-extraneous-dependencies:
    - error

  indent:
    - 2
    - tab
    - SwitchCase: 1
